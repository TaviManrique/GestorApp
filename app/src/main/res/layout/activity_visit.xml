<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VisitActivity">

    <TextView
        android:id="@+id/tvNameStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:text="Metro Alfonso Ugarte"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tvAddressStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        tools:text="Av. Alfonzo Ugarte 740"
        android:maxLines="1"/>

    <ImageButton
        android:id="@+id/imgCamera"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/camera"
        android:layout_marginVertical="48dp"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description_image_camera" />

    <Button
        android:id="@+id/btnVisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="48dp"
        android:text="@string/btn_text_visit"
        android:layout_marginHorizontal="48dp"/>

</LinearLayout>